CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic
DEPS = m.h

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
        $(CC) $(OBJ) -o $(NAME)

%.o: %.c $(DEPS)
        $(CC) $(CFLAGS) -c $< -o $@

clean:
        $(RM) $(filter-out $(DEPS),$(wildcard *~ \#*\#)) $(NAME)

oclean:
        $(RM) $(OBJ)

fclean: clean oclean

re: fclean all

