CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = rm -f

.PHONY: all clean oclean fclean re

all: m.h $(OBJ)
	@$(CC) $(OBJ) -o $(NAME)

clean:
	@$(RM) *~ $(NAME)

oclean:
	@$(RM) $(OBJ)

fclean: clean oclean

re: oclean all

.PHONY: school
school:

ifneq (,$(filter $(NAME),$(shell grep -o $(NAME) $(MAKEFILE_LIST) | uniq -d)))
$(error Variable NAME is defined and its value is $(NAME). Also checks that $(NAME) is only used one time in the Makefile)
endif

