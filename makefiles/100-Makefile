
CC = gcc
SRC = $(wildcard *.c)
OBJ = $(patsubst %.c,%.o,$(SRC))
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = rm -f

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	@$(CC) $(OBJ) -o $(NAME)

clean:
	@$(RM) *~ \#*\# $(NAME)

oclean:
	@$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

$(OBJ): %.o: %.c
	@$(CC) $(CFLAGS) -c $< -o $@

$(NAME): $(OBJ) m.h

ifneq (,$(wildcard m.h))
include m.h
endif

